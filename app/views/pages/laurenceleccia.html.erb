<div class="banner-about d-flex">
  <%= image_tag 'IMG_4071.jpeg' %>
  <%= image_tag 'IMG_4074.jpeg' %>
  <%= image_tag 'IMG_4046 - crop.jpeg' %>
  <%= image_tag 'IMG_4021 2 - crop.jpeg' %>
</div>
<div class="container">
  <div class="d-flex">
    <div class="cv">
      <h3>Biographie</h3>
      <%= render 'shared/cv' %>
    </div>
    <div class="texts">
      <h3>Textes</h3>
      <div class="text-grid">
        <% @texts.each do |text| %>
          <div class="text-card">
            <h4><strong><%= text.title %></strong></h4>
            <p><%= text.content %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
