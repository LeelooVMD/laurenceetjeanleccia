<div class="banner expos" style="background-image: url('<%= asset_path randomized_background_image_laurence %>');">
</div>
<div class="container">
  <div class="grid">
    <% @articles.each do |article| %>
      <figure class="image-block">
        <%= image_tag article.picture %>
        <figcaption>
          <p><%= article.title %></p>
          <div class='description'>
            <p><%= article.content %></p>
          </div>
        </figcaption>
      </figure>
    <% end %>
  </div>
</div>
