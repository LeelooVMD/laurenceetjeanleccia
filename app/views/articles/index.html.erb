</div>
<div class="container">
  <div class="grid">
    <% @articles.each do |article| %>
      <figure class="image-block">
        <%= image_tag article.picture %>
        <figcaption>
          <p><%= article.title %></p>
          <p>Voir plus <i class="fa-solid fa-arrow-down"></i></p>
          <p><%= article.content %></p>
        </figcaption>
      </figure>
    <% end %>
  </div>
</div>

